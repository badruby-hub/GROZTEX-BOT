generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Request {
  id        Int           @id @default(autoincrement())
  number    BigInt        @unique
  lastName  String?
  firstName String?
  createdAt DateTime      @default(now()) @db.Timestamp(0)
  status    RequestStatus @default(PENDING)
  authorId  BigInt
  sum       Float?
  User      User          @relation(fields: [authorId], references: [chatId])
}

model User {
  id            Int             @id @default(autoincrement())
  isAdmin       Boolean         @default(false)
  userName      String?         @unique
  isDeletedBot  Boolean         @default(false)
  firstName     String?
  lastName      String?
  chatId        BigInt          @unique
  Request       Request[]
  NewsletterLog NewsletterLog[]
}

enum RequestStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model NewsletterLog {
  id            Int      @id @default(autoincrement())
  message       String //текст рассылки
  sentCount     Int      @default(0) //сколько сообщений отправлено успешно 
  removedCount  Int      @default(0) // сколько пользователей удалено (403)
  createdAt     DateTime @default(now()) //время создания
  createdById   BigInt? // chatId того, кто запустил рассылку 
  CreatedByUser User?    @relation(fields: [createdById], references: [chatId])
}
